# API 配置
API_BASE_URL=https://api.openai.com
OPENAI_API_KEY=sk-your-api-key-here
MODEL=gpt-4o
PASSWORD=your-password-here

# 服务端口配置（Docker 部署时使用）
PORT=54188
HOST_PORT=54188

# 并发和重试配置
CONCURRENCY=5
MAX_RETRIES=5

# 图片和 PDF 独立并发配置
IMAGE_CONCURRENCY=2  # 图片 OCR 并发数
PDF_CONCURRENCY=2    # PDF OCR 并发数

# PDF 处理优化配置
PDF_DPI=200
BATCH_SIZE=8

# 图片压缩配置
IMAGE_COMPRESSION_RATIO=0.5  # 图片压缩比例 (0.1-1.0), 0.5 表示压缩到原尺寸的 50%, 1.0 表示不压缩

# 文件大小限制配置 (单位: MB)
MAX_IMAGE_SIZE_MB=50
MAX_PDF_SIZE_MB=200
MAX_PDF_PAGES=500

# 前端配置
FAVICON_URL=/static/favicon.ico
TITLE=Houyinx
BACK_URL=

# Cloudflare Turnstile 人机验证配置
TURNSTILE_ENABLED=false  # Turnstile 验证开关
TURNSTILE_SITE_KEY=your-turnstile-site-key-here
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here

# IP 滥用检测配置
IP_ABUSE_DETECTION_ENABLED=true
IP_ABUSE_ACCOUNTS_THRESHOLD=3
IP_ABUSE_DAYS_WINDOW=7

# 超时配置 (单位: 秒)
API_TIMEOUT=300  # API 调用超时时间
API_REQUEST_TIMEOUT=300  # API 请求超时时间
FRONTEND_POLL_TIMEOUT=300  # 前端轮询超时时间

# 内容道德审查配置
MODERATION_ENABLED=true  # 审查开关 (true/false)
MODERATION_API_BASE_URL=https://api.openai.com  # 审查 API 地址 (留空则使用 OCR 的 API 地址)
MODERATION_API_KEY=sk-your-api-key-here  # 审查 API 密钥 (留空则使用 OCR 的密钥)
MODERATION_MODEL=gpt-4o  # 审查模型 (推荐使用轻量级模型降低成本)

# 数据库路径（Docker 部署时自动使用 /app/data/tasks.db）
# DATABASE_PATH=data/tasks.db
