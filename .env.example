# API 配置
API_BASE_URL=https://api.openai.com
OPENAI_API_KEY=sk-your-api-key-here
MODEL=gpt-4o
PASSWORD=your-password-here

# 服务端口配置（Docker 部署时使用）
PORT=54188
HOST_PORT=54188

# 并发和重试配置
CONCURRENCY=5  # 已废弃，请使用下面的IMAGE_CONCURRENCY和PDF_CONCURRENCY
MAX_RETRIES=5

# 图片和PDF独立并发配置
IMAGE_CONCURRENCY=2  # 图片OCR并发数
PDF_CONCURRENCY=2    # PDF OCR并发数

# PDF处理优化配置
PDF_DPI=200
BATCH_SIZE=8

# 文件大小限制配置 (单位: MB)
MAX_IMAGE_SIZE_MB=50
MAX_PDF_SIZE_MB=200
MAX_PDF_PAGES=500

# 前端配置
FAVICON_URL=/static/favicon.ico
TITLE=Houyinx
BACK_URL=

# Cloudflare Turnstile 人机验证配置
TURNSTILE_SITE_KEY=your-turnstile-site-key-here
TURNSTILE_SECRET_KEY=your-turnstile-secret-key-here

# 数据库路径（Docker 部署时自动使用 /app/data/tasks.db）
# DATABASE_PATH=data/tasks.db

# IP滥用检测配置
IP_ABUSE_DETECTION_ENABLED=true
IP_ABUSE_ACCOUNTS_THRESHOLD=3
IP_ABUSE_DAYS_WINDOW=7